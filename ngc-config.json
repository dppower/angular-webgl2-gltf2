{
    "compilerOptions": {
        "target": "es5",
        "lib": [ "es2015", "dom", "dom.iterable" ],
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "./build-aot"
    },
  "files": [
      "./app/main.ts",
      "./app/gltf.d.ts",
      "./app/webgl2.d.ts"
  ],
  "angularCompilerOptions": {
   "skipMetadataEmit": true
 }
}
